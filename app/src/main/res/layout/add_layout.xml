<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/add_tag_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="请添加您的标签"
        android:inputType="text"
        android:maxLength="15"
        android:maxLines="1" />

    <Button
        android:text="确定"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_button_commit"
        android:layout_below="@+id/add_tag_edit"
        android:layout_alignRight="@+id/add_tag_edit"
        android:layout_alignEnd="@+id/add_tag_edit"
        android:background="@android:color/transparent"/>

    <Button
        android:text="取消"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_button_cancle"
        android:background="@android:color/transparent"
        android:layout_alignBaseline="@+id/add_button_commit"
        android:layout_alignBottom="@+id/add_button_commit"
        android:layout_alignRight="@+id/add_tag_edit"
        android:layout_alignEnd="@+id/add_tag_edit"
        android:layout_marginRight="64dp"
        android:layout_marginEnd="64dp" />

</RelativeLayout>