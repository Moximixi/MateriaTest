<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.materiatest.SettingActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/Base.ThemeOverlay.AppCompat.Light">
    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/setting_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="关于"
        android:textSize="14sp"
        android:textColor="#FF0000"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="10dp"
        />
    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BookShelf"
        android:textSize="16sp"
        android:background="@android:color/transparent"
        android:layout_below="@+id/setting_text1"
        android:layout_marginTop="10dp"/>

    <View
        android:id="@+id/setting_line1"
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:layout_below="@+id/button1"
        android:background="#CCCCCC"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="评分"
        android:background="@android:color/transparent"
        android:layout_below="@+id/setting_line1"
        android:textSize="16sp"
        android:layout_marginTop="10dp"/>

    <View
        android:id="@+id/setting_line2"
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:layout_below="@+id/button2"
        android:background="#CCCCCC"
        android:layout_marginTop="10dp" />


    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开源项目"
        android:background="@android:color/transparent"
        android:textSize="16sp"
        android:layout_below="@+id/setting_line2"
        android:layout_marginTop="10dp"/>


    <View
        android:id="@+id/setting_line3"
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:layout_below="@+id/button3"
        android:background="#CCCCCC"
        android:layout_marginTop="10dp" />
    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="反馈"
        android:background="@android:color/transparent"
        android:textSize="16sp"
        android:layout_below="@+id/setting_line3"
        android:layout_marginTop="10dp"/>


    <View
        android:id="@+id/setting_line4"
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:layout_below="@+id/button4"
        android:background="#CCCCCC"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开源许可"
        android:background="@android:color/transparent"
        android:textSize="16sp"
        android:layout_below="@+id/setting_line4"
        android:layout_marginTop="10dp"/>


    <View
        android:id="@+id/setting_line5"
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:layout_below="@+id/button5"
        android:background="#CCCCCC"/>
    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="隐私政策"
        android:background="@android:color/transparent"
        android:textSize="16sp"
        android:layout_below="@+id/setting_line5"
        android:layout_marginTop="10dp"/>

    <View
        android:id="@+id/setting_line6"
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:layout_below="@+id/button6"
        android:background="#CCCCCC"/>
    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="使用条款"
        android:textAllCaps="false"
        android:background="@android:color/transparent"
        android:layout_below="@+id/setting_line6"
        android:textSize="16sp"
        android:layout_marginTop="10dp"/>
    <View
        android:id="@+id/setting_line7"
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:layout_below="@+id/button7"
        android:background="#CCCCCC"/>

</RelativeLayout>
